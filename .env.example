# ============================================
# VERDEXA — Environment Configuration
# ============================================
# Copy to backend/.env for backend, and set frontend vars in frontend/.env.local
# Backend: cp .env.example backend/.env
# Frontend: create frontend/.env.local with NEXT_PUBLIC_API_URL=http://localhost:8000

# ─── API Keys ───────────────────────────────────────────
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
GROQ_API_KEY=gsk_your-groq-api-key

# ─── LLM Configuration ─────────────────────────────────
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o

# ─── Database (Supabase PostgreSQL) ─────────────────────
DATABASE_URL=postgresql+asyncpg://postgres:your-password@db.your-project.supabase.co:5432/postgres
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ─── Redis ──────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ─── ChromaDB ───────────────────────────────────────────
CHROMA_PERSIST_DIR=./chroma_data

# ─── Server ─────────────────────────────────────────────
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
CORS_ORIGINS=http://localhost:3000

# ─── Frontend ───────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8000

# ─── Upload ─────────────────────────────────────────────
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=100

# ─── Auth ───────────────────────────────────────────────
VULNORA_DEV_AUTH_BYPASS=1

# ─── GitHub Token (optional — for private repos) ───────
GITHUB_TOKEN=ghp_your-github-token

# ─── Debug ──────────────────────────────────────────────
DEBUG=false
